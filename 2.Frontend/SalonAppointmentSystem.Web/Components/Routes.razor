<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)">
            <NotAuthorized>
                @if (context.User.Identity?.IsAuthenticated == true)
                {
                    @* Usuario autenticado pero sin permisos - Redirigir a Access Denied *@
                    <RedirectToAccessDenied />
                }
                else
                {
                    @* Usuario no autenticado - Redirigir a Home con ReturnUrl *@
                    <RedirectToLogin />
                }
            </NotAuthorized>
            <Authorizing>
                <div class="authorizing-container">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Verificando permisos...</span>
                    </div>
                    <p class="mt-3">Verificando permisos...</p>
                </div>
            </Authorizing>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Página no encontrada</PageTitle>
        <LayoutView Layout="typeof(Layout.MainLayout)">
            <div class="not-found-container">
                <div class="not-found-content">
                    <div class="not-found-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <h1 class="not-found-title">404</h1>
                    <p class="not-found-message">Página no encontrada</p>
                    <p class="text-muted">La página que buscas no existe o ha sido movida.</p>
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>
                        Volver al Inicio
                    </a>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>

<style>
    .authorizing-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background: var(--bs-light);
    }

    .not-found-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2rem;
    }

    .not-found-content {
        background: white;
        border-radius: 1rem;
        padding: 3rem;
        max-width: 500px;
        width: 100%;
        text-align: center;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .not-found-icon {
        font-size: 5rem;
        color: var(--bs-warning);
        margin-bottom: 1rem;
    }

    .not-found-title {
        font-size: 4rem;
        font-weight: 700;
        color: var(--bs-dark);
        margin-bottom: 0.5rem;
    }

    .not-found-message {
        font-size: 1.5rem;
        color: var(--bs-secondary);
        margin-bottom: 1rem;
    }
</style>
